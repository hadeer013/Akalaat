@model Akalaat.DAL.Models.Resturant

@{
    ViewData["Title"] = "Restaurant Details";
}

<div class="d-flex justify-content-between">
    <h1>@Model.Name</h1>
    <a asp-action="Assign" asp-controller="Moods" class="btn btn-primary">Assgin</a>
</div>

<h3>Moods:</h3>
<ul>
    @foreach (var mood in Model.Moods)
    {
        <li>
            <form asp-action="Edit" asp-route-id="@mood.Id">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" name="Name" value="@mood.Name" />
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </form>
            <form asp-action="Delete" asp-route-id="@mood.Id">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </li>
    }
</ul>

<a asp-action="Index">Back to List</a>


