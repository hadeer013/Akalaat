@model Akalaat.ViewModels.RegisterViewModel;
@{
    ViewData["Title"] = "Register";
    var tempRole = ViewBag.Role;
}

<h1>Register</h1>


<h4>RegisterUserViewModel</h4>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Register" asp-route-Role="@tempRole">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label">Username</label>  
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" type="text" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Password</label>
                    <input asp-for="Password" class="form-control" type="password" />  
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                
                <div class="form-group">
                    <input type="submit" value="Register As @tempRole" class="btn btn-primary" />
                </div>
            </form>
            @if(tempRole =="Customer")
            {
                <div class="row">
                    <div class="col-sm-8">
                        <a asp-action="ExternalLogin" asp-route-provider="Microsoft" class="btn btn-login  btn-f">
                            <img width="30" height="30" src="https://img.icons8.com/color/48/microsoft.png" alt="microsoft" />
                            Login With Microsoft
                        </a>
                    </div><!-- End .col-6 -->
                </div>
            }
           
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
