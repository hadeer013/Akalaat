@model Akalaat.ViewModels.DisplayAddressBookVM

@{
    ViewData["Title"] = "Index";
}

<div class="align-content-center">
    <h1>Your Address Book</h1>
</div>

@if (Model != null)
{
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AddressDetails)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AddressDetails)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CityName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CityName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DistrictName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DistrictName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RegionName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RegionName)
            </dd>
        </dl>
    </div>
    <div>
        <a href="@Url.Action("Edit", new { id = Model.AddressBookId })" class="btn btn-primary">Edit</a> |
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Main</a>
    </div>
}
else
{
    <div>
        <a href="@Url.Action("AddAddressBook")" class="btn btn-primary">Add</a> |
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Main</a>
    </div>
}
