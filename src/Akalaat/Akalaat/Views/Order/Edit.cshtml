@model Akalaat.ViewModels.OrderVM

<h2>Edit Order</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="DateTime">Order Date:</label>
        <input asp-for="DateTime" class="form-control" />
        <span asp-validation-for="DateTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ArrivalTime">Arrival Time:</label>
        <input asp-for="ArrivalTime" class="form-control" />
        <span asp-validation-for="ArrivalTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TotalPrice">Total Price:</label>
        <input asp-for="TotalPrice" class="form-control" />
        <span asp-validation-for="TotalPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TotalDiscount">Total Discount:</label>
        <input asp-for="TotalDiscount" class="form-control" />
        <span asp-validation-for="TotalDiscount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SelectedItemS">Select Item(s):</label>
        <select asp-for="SelectedItemS" asp-items="Model.Items" class="form-control" multiple size="5">
        </select>
        <span asp-validation-for="SelectedItemS" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Customer_ID" />

    <button type="submit" class="btn btn-primary">Save</button>
</form>

