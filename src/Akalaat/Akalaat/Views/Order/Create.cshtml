        <label asp-for="OrderItems">Select Item(s):</label>
        <select asp-for="OrderItems" asp-items="Items" class="form-control" multiple size="5"> </select>
             <span asp-validation-for="OrderItems" class="text-danger"></span>
    </div> *@
    <input type="hidden" asp-for="Customer_ID" />
    <button type="submit" class="btn btn-primary">Create</button>
</form>

