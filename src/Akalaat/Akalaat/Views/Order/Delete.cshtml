@model Akalaat.ViewModels.OrderVM

<h2>Delete Order</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Order Details</h5>
        <p class="card-text">
            <strong>Order Date:</strong> @Model.DateTime<br />
            <strong>Arrival Time:</strong> @Model.ArrivalTime<br />
            <strong>Total Price:</strong> @Model.TotalPrice<br />
            <strong>Total Discount:</strong> @Model.TotalDiscount<br />
        </p>
        <p>Are you sure you want to delete this order?</p>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Customer_ID" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
