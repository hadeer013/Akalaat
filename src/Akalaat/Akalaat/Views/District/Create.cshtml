@model DistrictVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>DistrictVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="City_ID" class="form-control" hidden/>
            </div>
            <div class="form-group">
                <input asp-for="City_Name" class="form-control" hidden/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create District" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-controller="City" asp-route-id="@Model.City_ID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
