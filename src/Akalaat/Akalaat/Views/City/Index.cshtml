@model IEnumerable<Akalaat.DAL.Models.City>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<br />
<form class="my-3" asp-action="Index" asp-controller="City">
	<div class="row">
		<div class="col-sm-8">
			<input placeholder="Search By city Name" name="CityName" class="form-control" />
		</div>
		<div class="col-sm-4">
			<input type="submit" value="Search" class="btn btn-success btn-block" />
		</div>
	</div>
</form>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>&nbsp;</th>
			<th>&nbsp;</th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td><a asp-action="Details"  asp-route-id="@item.Id" class="btn btn-primary">Details</a></td>
				<td><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a></td>
				<td><a asp-action="Delete"  asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
			</tr>
		}
	</tbody>
</table>
