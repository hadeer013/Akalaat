<link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
<style>
    .star {
        cursor: pointer;
        color: orange;
        font-weight: bolder;
    }
</style>


@model IEnumerable<Akalaat.DAL.Models.Review>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="AddReview">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                Likes
            </th>
            <th>
                Offer Image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resturant_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <p>@ViewBag.CustomerName</p>
                </td>
                <td>
                    @{
                        int goodRate = (int)item.Rating;
                        int badRate = 5 - goodRate ;
                        for (int i = 0; i < goodRate; i++)
                        {
                            <i class="bi bi-star-fill star "></i>
                        }
                        
                        for (int i = 0; i < badRate; i++)
                        {
                            <i class="bi bi-star star "></i>
                        }
                     }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.No_of_Likes)
                    @Html.Raw("&#x1F44D;") <!-- Like emoji -->
                </td>
                <td>
                    <img src="~/images/@item.ReviewImage" alt="Offer Image" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Resturant_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
