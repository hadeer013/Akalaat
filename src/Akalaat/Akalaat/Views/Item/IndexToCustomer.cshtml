                @foreach (var item in Model)
                {
                    <div class="section-body">

                        <div class="menu-item clickable-item  ">
                            <div class="content">
                                <div class="item-header"><a class="clickable-anchor"></a>
                                    <h5 class="title">
                                        @item.Name
                                    </h5></div>
                                <p class="description">
                                    @item.Description
                                    <!----></p>
                                <div class="item-footer">
                                   
