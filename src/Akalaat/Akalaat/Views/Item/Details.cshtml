@model Akalaat.ViewModels.ItemViewModel

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">@Model.Name</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <img src="~/Images/@Model.ImageUrl" alt="Item Image" class="img-fluid" />
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Likes</dt>
                        <dd class="col-sm-8">@Model.Likes</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <p>
              @*   <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Edit</a> *@
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </p>
        </div>
    </div>
</div>
